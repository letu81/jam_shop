<% if @ticket.blank? %>
<%= render_navbar_for(@page.title, 
  { icon: 'fa fa-angle-left', link: "javascript:history.go(-1)" }) %>
<% end %>

<div class="pages <%= @ticket.present? ? "qrcode-pages" : "" %>">
  <%= raw @page.body %>
  
  <% if @ticket.present? %>
  <div class="qrcode">
    <h2>长按或扫描下方的二维码，关注我们！</h2>
    <img src="https://mp.weixin.qq.com/cgi-bin/showqrcode?ticket=<%= @ticket %>" class="qrcode-image">
  </div>
  <% end %>
  
</div>